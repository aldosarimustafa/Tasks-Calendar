<%- include("../partials/header") %>

    <main>
        <h1>Task Detail</h1>
        <article class="task-detail">
            <div>
                <%= task.task %>
            </div>
            <div>
                <%= task.dueDate.toLocaleDateString() %>
            </div>
            <div>
                <form action="/tasks/<%= task._id %>?_method=DELETE" method="POST">
                    <button type="submit">â¨‚</button>
                </form>
            </div>
        </article>
        <a href="/tasks/<%= task._id %>/edit">Edit Task</a>
        <hr>
        
        <h2>Notes:</h2>
        <form action="/tasks/<%= task._id %>/notes" method="POST">
            <input type="text" name="note">
            <button type="submit">Add Note</button>
        </form>
        <% if (tasks.notes.length) { %>
            <% tasks.notes.forEach(function(task) { %>
                        <article class="note">
                            <div><%= task.note %></div>
                        </article>
        <% }); %>
        <% else { %>
            <h5>There Are No Notes</h5>
        <% } %>

    </main>

    <%- include("../partials/footer") %>